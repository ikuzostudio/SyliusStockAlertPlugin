{% form_theme form '@SyliusShop/Form/theme.html.twig' %}
{% if sylius.channel.stockAlertActive %}
    <div class="ui segment">
        <h4 class="ui dividing header">{{ 'ikuzo_stock_alert.ui.stock_alert'|trans }}</h4>

        {{ form_start(form, {'attr': {'class': 'ui form form-default', 'id': 'back_in_stock_not'}, 'action': path('ikuzo_stock_alert_add_stock_alert')}) }}
        {% if form.email is defined %}
            {{ form_row(form.email, {'attr': {'data-test-fill-subscription-form-whit-my-email':''}}) }}
        {% endif %}

        {{ form_row(form.product_variant_code, {'attr': {'data-test-add-email-to-back-in-stock-notification-list':''}}) }}

        <button type="submit" class="ui huge primary icon labeled button" {{ sylius_test_html_attribute('subscribe-to-notifications') }}><i class="bell icon"></i> {{ 'ikuzo_stock_alert.ui.stock_alert'|trans }}</button>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endif %}
